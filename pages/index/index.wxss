.container {
  display: flex;
  margin-bottom: 80rpx;
  padding-top: 0rpx;
}
.index-swiper{
  height: 280rpx;
  width: 100%;
}
.swiper-image{
  height: 280rpx;
  width: 100%;
}
.subcontainer{
  display: flex;
  width: 90%;
  flex-direction: column;
  padding-right: 30rpx;
  padding-left: 30rpx;
}
.header {
  width: 100%;
  /* margin-top: 0rpx; */
  margin-bottom: 22rpx;
  padding-bottom: 30rpx;
  background-color: #FFFFFF;
  box-shadow: 0 22rpx 0 #f3f5f8;
}

.header image {
  display: none;
  width: 100%;
  height: 280rpx;
}

.header .title {
  margin: 30rpx 0;
}

.register-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.tip-info {
  margin: 10rpx 0 14rpx 0;
  font-size: 34rpx;
  color: #666666;
}

form {
  width: 100%;
  background-color: #ffffff;
}

.form-item {
  margin: 20rpx 0 56rpx 0;
  padding-bottom: 20rpx;
}

.cell-label {
  height: 84rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: rgb(51, 53, 52);
}

.asterisk {
  color: #ff6d56;
  margin-left: 10rpx;
  font-size: 32rpx;
}


input, textarea {
  height: 64rpx;
  padding: 8rpx 12rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #555;
  background-color: #fff;
  border: 1px solid #ccc;
  border-radius: 8px;
  box-shadow: inset 0 1px 1px rgba(0,0,0,0.075);
}

textarea {
  height: 192rpx;
  box-sizing: border-box;
  width: 100%;
}

label text {
  font-size: 28rpx;
  color: #333534;
  line-height: 44rpx;
  margin-left: 20rpx;
  box-sizing: border-box;
}

.btn-submit {
  height: 80rpx;
  width: 80%!important;
  line-height: 80rpx;
  padding: 0;
  width: 100%;
  font-size: 32rpx;
  font-weight: 800;
  color: #fff;
  border-color: #0067b8;
  background-color: #4077F2;
  border: 0;
  text-align: center;
}

/* 上传文件 */
.picture_list image {
  width: 40rpx;
  height: 40rpx;
  margin: 0 4%;
}

.add-image, .up-pic image {
  margin-top: 2%;
  margin-left: 2%;
  width: 150rpx;
  height: 150rpx;
  color: #ddd;
  font-size: 144rpx;
  line-height: 95%;
  text-align: center;
  background-color: #fff;
  cursor: pointer;
  border-radius: 10rpx;
}

.picture_list {
  padding: 20rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: flex-start;
  align-content: flex-start;
}

.picture-item {
  margin: 10px;
  margin-left: 0;
  position: relative;
  width: 160rpx;
  height: 160rpx;
}

.picture-item .del {
  position: absolute;
  top: -11rpx;
  right: -11rpx;
  color: #fff;
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
  z-index: 2;
  line-height: 35rpx;
  text-align: center;
  background-color: #f00;
}

.upload_progress {
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0.7;
  border-radius: 8rpx;
  background-color: #000;
  color: #fff;
  width: 167rpx;
  height: 160rpx;
  text-align: center;
  line-height: 160rpx;
  font-size: 12px;
}

.picture-item image {
  width: 160rpx;
  height: 160rpx;
}

.yes-upload {
  color: #fff;
  background-color: #00a0e9;
  border-radius: 36rpx;
}
