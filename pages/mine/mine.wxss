page {
    height: 100%;
}

.container {
    height: 100%;
    background-color: #F4F4F4;
    margin: 0;
    padding: 0;
}

.header-bg {
    position: absolute;
    width: 100%;
    height: 240rpx;
    z-index: 0;
}

.personal {
    position: relative;
    width: 100%;
    height: 260rpx;
    display: flex;
    align-items: center;
}

.userinfo-avatar {
    width: 120rpx;
    height: 110rpx;
    margin-left: 36rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    font-size: 30rpx;
    color: #FFFFFC;
    margin-left: 28rpx;
    margin-right: 14rpx;
    margin-top: -40rpx;
}

.suggestions {
    position: absolute;
    top: 254rpx;
    width: 100%;
    height: 100%;
    background-color: #fff;
    overflow: scroll;
}

.suggestions {
    box-sizing: border-box;
    padding: 20rpx 30rpx;
}

.suggestions .title {
    height: 64rpx;
    font-size: 30rpx;
    line-height: 64rpx;
    color: #979797;
}

.suggestion-item {
    display: flex;
    flex-direction: column;
    margin: 40rpx 0;
}

.suggestion-item .nickName {
    font-weight: 600;
    font-size: 32rpx;
    color: #101010;
}

.suggestion-item .description {
    margin-top: 12rpx;
    color: #3A3A3A;
    font-size: 30rpx;
}

.suggestion-item .time {
    margin-top: 26rpx;
    color: #767676;
    font-size: 24rpx;
}
